{
  "name": "gmail-template-extension",
  "version": "3.2.0",
  "description": "Gmail template extension",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run compile",
    "compile": "./node_modules/webpack/bin/webpack.js -p --config ./config/webpack.config.js",
    "release": "standard-version",
    "test": "jest",
    "selenium": "java -jar -Dwebdriver.chrome.driver='./node_modules/chromedriver/lib/chromedriver/chromedriver' ./e2e/selenium-server-standalone-3.5.3.jar",
    "e2e": "./node_modules/.bin/wdio config/wdio.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiagoinacio/gmail-template-extension.git"
  },
  "keywords": [
    "chrome",
    "gmail",
    "extension",
    "template",
    "templates",
    "inboxsdk"
  ],
  "author": "Tiago In√°cio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tiagoinacio/gmail-template-extension/issues"
  },
  "homepage": "https://github.com/tiagoinacio/gmail-template-extension#readme",
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "chai": "^4.1.2",
    "chromedriver": "^2.42.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "generate-json-file-webpack-plugin": "0.0.3",
    "jest": "^23.6.0",
    "jest-css": "^1.0.1",
    "jsx": "^0.9.89",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "standard-version": "^4.4.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "wdio-mocha-framework": "^0.6.3",
    "wdio-selenium-standalone-service": "0.0.10",
    "webdriverio": "^4.13.2",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-concat-plugin": "^3.0.0",
    "webpack-dev-server": "^3.1.8"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "globals": {
      "InboxSDK": true,
      "chrome": true,
      "window": true,
      "browser": true,
      "document": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ]
    },
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/e2e/**",
      "!**/config/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/vendor/**"
    ],
    "testPathIgnorePatterns": [
        "node_mdules",
        "e2e"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "\\.css$": "jest-css"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./config/setupTests.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/react"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  }
}
